@using Abp.Web.Mvc.Extensions
@model BoilerplatePro.Web.Models.Account.LoginFormViewModel
@section Styles
{
    @Html.IncludeStyle("~/Views/Account/Login.css")
}
@section Scripts
{
    @Html.IncludeScript("~/Views/Account/Login.js")
}

<div class="card">
    <div class="body">
        @if (ViewBag.ErrorMessage != null)
        {
<div class="error-message-box">
    @Html.Raw(ViewBag.ErrorMessage)
</div>}
        <form id="LoginForm" method="POST" asp-action="Login">
            <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
            <input type="hidden" name="returnUrlHash" />
            <h4 class="text-center">@L("LogIn")</h4>
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="material-icons">email</i>
                </span>
                <div class="form-line">
                    <input type="email" class="form-control" id="usernameBox" name="UsernameOrEmailAddress" placeholder="E-Mail Address" required autofocus maxlength="100">
                </div>
            </div>
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="material-icons">lock</i>
                </span>
                <div class="form-line">
                    <input type="password" class="form-control" name="Password" placeholder="@L("Password")" required maxlength="100">
                </div>
            </div>
            @if (ViewBag.PasswordResetToken != null)
            {
                string passwordToken = ViewBag.PasswordResetToken.ToString();
                Html.Hidden("PasswordResetToken", passwordToken);
            }
            <div class="row">
                <div class="col-xs-8 p-t-5">
                    <input type="checkbox" name="RememberMe" id="rememberme" class="filled-in chk-col-pink" value="true">
                    <label for="rememberme">@L("RememberMe")</label>
                </div>
                <div class="col-xs-4">
                    <button id="LoginButton" class="btn btn-block bg-pink waves-effect" type="submit">@L("LogIn")</button>
                </div>
            </div>
            <div class="row m-t-15 m-b--20">
                <div class="col-xs-12">
                    <a href="#" onclick="resetPassword()">Reset Password</a>
                </div>
            </div>
        </form>
    </div>
</div>